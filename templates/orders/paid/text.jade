extends ../../layout/layout.jade

block content

  h1 Pagamento realizado.
  
  p Olá #{customer.name}.
  
  p Identificamos o pagamento do pedido 
   a(href="https://feiraorganica.com/meu/pedido/#{_id}", hreflang="pt-br", style="text-decoration: none;") #{_id}.
   
  p Para acompanhar a entrega acesse: 
    a(href="https://feiraorganica.com/meu/pedido/#{_id}", hreflang="pt-br", style="text-decoration: none;") https://feiraorgânica.com/meu/pedido/#{_id}
  
  h2 Detalhes
  
  p 
    b Pedido: 
    a(href="https://feiraorganica.com/meu/pedido/#{_id}", hreflang="pt-br", style="text-decoration: none;") #{_id}
    
  b Entrega: 
  | #{shipping.deliveryOption}
