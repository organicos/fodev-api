doctype html
html(lang="pt-br")
    head
        title #{article.title}
        
        meta(name='description', content='#{article.content}')

        meta(itemprop='name', content='#{article.title}')
        meta(itemprop='description', content='#{article.content}')
        meta(itemprop='image', content='#{article.images[0].url}')

        meta(name='twitter:card', content='summary_large_image')
        meta(name='twitter:site', content='@feira_organica')
        meta(name='twitter:title', content='#{article.title}')
        meta(name='twitter:description', content='#{article.content}')
        meta(name='twitter:image', content='#{article.images[0].url}')
        meta(name='twitter:data1', content='R$#{article.price}')
        meta(name='twitter:label1', content='Preço')
        meta(name='twitter:data2', content='#{article.season}')
        meta(name='twitter:label2', content='Época')

        meta(property='og:title', content='#{article.title}')
        meta(property='og:type', content='article')
        meta(property='og:url', content='https://feiraorganica.com/blog/#{article.encoded_url}')
        meta(property='og:image:url', content='#{article.images[0].url}')
        meta(property='og:image:secure_url', content='#{article.images[0].url}')
        meta(property='og:description', content='#{article.content}')
        meta(property='og:site_name', content='Feira Orgânica Delivery')
        meta(property="article:published_time" content="2013-09-17T05:59:00+01:00")
        meta(property="article:modified_time" content="2013-09-16T19:08:47+01:00")
        meta(property="article:section" content="#{article.category}")
        meta(property="article:tag" content="#{article.highlight ? 'Destaque' : ''}" )
        meta(property="fb:admins" content="100000036122524")
        
        link(rel="author" href="https://plus.google.com/+BrunoJoão1")
        link(rel='publisher' href="https://plus.google.com/107566665570039529018")